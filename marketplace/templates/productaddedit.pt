<!-- extend home base layout -->
{% extends "home_base.html" %}

{% block content %}
<div class="span5"> <!--  Content-->
    <div class="input-group">
        <form action="/create" method="post" name="productadd">
            {{form.hidden_tag()}}
            <p>Name: <input type="text" name="name" class="form-control" /> </p>
            <p>Brand: <input type="text" name="brand" class="form-control"/></p>
            <p>SKU:<input type="text" name="sku" class="form-control"/></p>
            <p>Price: <input type="number" step="any" min="0" name="price" class="form-control"/></p>
            <p>Active: <input type="checkbox" name="is_active" class="form-control"/></p>
            <p>Best Seller: <input type="checkbox" name="is_bestseller " class="form-control"/></p>
            <p>Featured: <input type="checkbox" name="is_featured " class="form-control"/></p>
            <p>Quantity: <input type="number" min="0" name="quantity" class="form-control"/></p>
            <p>Description: <input type="text" name="description" class="form-control"/></p>
            <p>Key Words: <input type="text" name="meta_keywords" class="form-control"/></p>
            <p>Meta Description: <input type="text" name="meta_description" class="form-control"/></p>
            <p>Product Picture: <input type="file" name="product_picture" class="form-control"/></p>
            <span class="input-group-btn">
                <p><input class="btn btn-default" type="submit" value="Save Product" /></p>
            </span>
        </form>
    </div>
</div>


{% endblock %}